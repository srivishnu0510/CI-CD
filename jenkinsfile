pipeline {
    agent any

    environment {
        AWS_REGION  = "ap-south-1"
        SSH_KEY     = "/var/lib/jenkins/.ssh/jenkinskeylinux16dec.pem"
        TF_DIR      = "terraform"
        ANSIBLE_DIR = "ansible"
        SSH_USER    = "ec2-user"
    }

    stages {

        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir("${TF_DIR}") {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Wait for EC2 SSH (Ansible Native)') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh """
                        echo "Inventory check:"
                        ansible-inventory -i inventory/aws_ec2.yaml --graph

                        echo "Waiting for SSH using Ansible..."
                        ansible aws_ec2 \
                        -i inventory/aws_ec2.yaml \
                        -u ${SSH_USER} \
                        --private-key=${SSH_KEY} \
                        -m wait_for_connection \
                        -a timeout=300
                    """
                }
            }
        }

        stage('Ansible Configuration') {
            steps {
                dir("${ANSIBLE_DIR}") {
                    sh """
                        echo "Running Ansible playbook on aws_ec2"
                        ansible-playbook \
                        -i inventory/aws_ec2.yaml \
                        -l aws_ec2 \
                        -u ${SSH_USER} \
                        --private-key=${SSH_KEY} \
                        playbooks/site.yaml
                    """
                }
            }
        }
    }

    post {
        success {
            echo "✅ PIPELINE SUCCESSFULLY COMPLETED"
        }
        failure {
            echo "❌ PIPELINE FAILED – Check logs"
        }
    }
}
