pipeline {
    agent any

    stages {
        stage('Terraform') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Ansible') {
            steps {
                dir('ansible') {
                    sh 'ansible-playbook -i inventory/aws_ec2.yaml playbooks/site.yaml'
                }
            }
        }
    }
}

